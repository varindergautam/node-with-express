  <%- include('../admin/partials/admin_top_menu'); %>

  <%- include('../admin/partials/sidebar'); %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Update Profile</h1>

          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        
            <form action="/admin/profile/<%= adminData.id %>" method="post" enctype="multipart/form-data">

                <input type="" name="id" value="<%= adminData.id %>">
        
            <div class="form-group">
              <label for="exampleInputEmail1">Name</label>
              <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name" value="<%=  adminData.name %>">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input type="text" class="form-control" id="email" placeholder="Enter Email" name="email" value="<%=  adminData.email %>">
              </div>

              <div class="form-group">
                <label for="exampleInputEmail1">Profile</label>
                <img src="<%=  adminData.profile_pic %>" width="150px">
                <input type="file" class="form-control" id="profile_pic" name="profile_pic" value="<%=  adminData.profile_pic %>">
              </div>

              <!-- <div class="form-group">
                <label for="exampleInputEmail1">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name" value="<%=  adminData.name %>">
              </div> -->


            <button type="submit" class="btn btn-primary">Update</button>
        </form>
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
